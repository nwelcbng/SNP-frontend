/* pages/register/register.wxss */
.formTest{
  transition: 1s;
}

.register-title{
  width: 100%;
  height: 200rpx;
  background-color: wheat;
  text-align: center;
  font-size: 60rpx;
  line-height: 200rpx;
}

.register-input{
  border-bottom: 1px solid #62caf5;
  margin: 20rpx 10rpx;
}
.error{
  color:red;
  font-size: 20rpx;
  margin: 0 10rpx;
}

.register-textarea{
  width: calc(100% - 20rpx);
  margin:20rpx auto;
}

.register-item{
  padding: 0rpx 25rpx;
  color: #62caf5;
}
.register-label-an{
  top: 70rpx;

}
.register-label,.register-label-an{
  position: relative;
  padding: 10rpx;
  color:#62caf5;
  text-shadow: 0 0 10rpx ;
}
.button,.codeButton{
  background-color: #62caf5;
  box-shadow: 0 0 40rpx #9bd4ec;
  color: white;
  transition: 0.5s;
}
.codeButton,.codeBtn-active{
  position: relative;
  bottom: 20rpx;
  margin-left: 30rpx;
}
.button-active{
  background-color: #35b1e6;
  box-shadow: 0 0 40rpx #9bb7ec;
  color: white;
  transition: 0.5s;
}
.codeBtn-active{
  background-color: hsl(198, 69%, 49%);
  box-shadow: 0 0 40rpx #9bd4ec;
  color: white;
  transition: 0.5s;
}
.submit{
  margin-top: 40rpx;
}
.checkbox{
  margin:30rpx auto;
  /* color:#656dda; */
}

.testCode{
  width: 200rpx;
  display: inline-block;
}
.text1{
  display: inline-block;
  transition: 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  transform: translateY(0rpx);
}
.textactive{
  transform: translateY(-70rpx);
  transition: 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}
.bottom-content{
  height: 50rpx;
}
.codeLabel{
  display: inline-block;
  position: relative;
  bottom: 20rpx;
}
.tips{
  padding: 0 20rpx;
}
.tip{
  color: white;
  font-size: 24rpx;
}
.input-fontFormat{
  color:white;
  font-size: 26rpx;
}
/* components/home-navbar/navbar.wxss */
page{
  background: #f1f1f1;
}
.navBar{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
}
.navBar-item{
  position: relative;
  width: 50%;
  height: 50%;
  text-align: center;
  background-color: white;
  display: flex;
  align-items: center;
}
.item-text{
  width: 100%;
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;

}
.first{
  border-right: 1px solid black ;
}
.last{
  border-left: 1px solid black ;
}

  position: relative;
  color: #62caf5;
}
.loading-bar{
  margin: 0 auto;
  background-color: white;
  width: 500rpx;
  height: 10rpx;
  border-radius: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.loading-title{
  margin: 20rpx auto;
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.bar-pot{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}
